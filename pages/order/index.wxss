/* pages/order/index.wxss */
page{
  height: 100%;
  background-color: #f5f5f5;
}
.container{
  justify-content: space-between;
  
}
.container .order-box{
  display: flex;
  justify-content: space-between;
  width: 100%;
  align-items: center;
  background-color: #fff;
}
.container .order-box .order-tab{
  padding:20rpx 15rpx;
  font-size: 16px;
  border-bottom: 2px solid transparent;
}
.container .order-box .order-tab.active{
  border-bottom: 2px solid orange;  
}
.container .no-order-list{
  text-align: center;
  position: absolute;
  top: 40%;
}
.container .no-order-list image{
  width: 108rpx;
  height: 108rpx;
}
.container .order-list{
  margin: 20rpx 0;
  display: flex;
  flex-direction: column;
  width: 100%;
  padding: 20rpx;
  background-color: #fff;
  box-sizing: border-box;
}
.container .order-list .top{
  padding: 20rpx 10rpx;
  margin: 10rpx 0;
  display: flex;
  width: 100%;
  justify-content: space-between;
}
.container .order-list .img{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding: 40rpx 10rpx;
  flex-wrap: wrap;
}
.container .order-list .img image{
  width: 25%;
  height: 180rpx;
  
}
.container .order-list .bottom{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.container .order-list .bottom .totalPrice{
  color: red;
  font-size: 18px;
}
.container .order-list .bottom .cancel-btn,
.container .order-list .bottom .pay-btn{
  padding: 10rpx 20rpx;
  border: 1px solid orangered;
  border-radius: 10rpx;
}
.container .order-list .bottom .pay-btn{
  background-color: orangered;
  color: #fff;
}