/* pages/order/index.wxss */
page{
  height: 100%;
}
.container{
  height: 100%;
  justify-content: space-between;
  background-color: #f5f5f5;
}
.container .order-box{
  display: flex;
  justify-content: space-between;
  width: 100%;
  background-color: #fff;
}
.container .order-box .order-tab{
  padding: 10rpx 15rpx;
  font-size: 16px;
}
.container .order-box .order-tab.active{
  border-bottom: 2px solid orange;  
}
.container .no-order-list{
  text-align: center;
  position: absolute;
  top: 40%;
}
.container .no-order-list image{
  width: 108rpx;
  height: 108rpx;
}
